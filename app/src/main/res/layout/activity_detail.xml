<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:layout_width="match_parent"
                app:srcCompat="@mipmap/ic_launcher"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:id="@+id/eventImageView"
                android:layout_alignParentEnd="true"
                android:layout_height="150dp" />

            <TextView
                android:text="Startup Talk #1"
                android:textStyle="bold"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView"
                android:layout_alignParentStart="true"
                android:layout_margin="8dp"
                android:id="@+id/titleTextView" />

            <TextView
                android:text="23 April 2017"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/iconDate"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"
                android:id="@+id/dateTextView" />

            <View
                android:layout_width="match_parent"
                android:id="@+id/view1"
                android:background="@android:color/darker_gray"
                android:layout_height="2dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/ic_menu_agenda"
                    android:id="@+id/iconDate" />

                <TextView
                    android:text="Deskripsi Acara"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/iconDate"
                    android:id="@+id/descriptionLabel" />

                <TextView
                    android:text="Lorem Ipsum blablablala deksripsi acara ini adalah sekedear bualan belaka. maka dari itu sesunggihnya hdlajlak oifds ja fdi dnsalkklk lkfdlk e lajksndmf, ona,ms d;o ;onasd fnv jndf lm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/descriptionTextView"
                    android:layout_below="@+id/descriptionLabel"
                    android:layout_alignStart="@+id/descriptionLabel" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:id="@+id/view2"
                android:background="@android:color/darker_gray"
                android:layout_height="2dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/ic_menu_report_image"
                    android:id="@+id/iconSpeaker" />

                <TextView
                    android:text="Pemateri"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/iconSpeaker"
                    android:id="@+id/speakerLabel" />

                <TextView
                    android:text="Arif Akbarul Huda, S.Si., M.Eng., Ph.D"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/speakerLabel"
                    android:layout_toEndOf="@+id/iconSpeaker"
                    android:id="@+id/speakerTextView" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:id="@+id/view3"
                android:background="@android:color/darker_gray"
                android:layout_height="2dp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@android:drawable/ic_dialog_map"
                    android:id="@+id/iconLocation" />

                <TextView
                    android:text="Lokasi"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_toEndOf="@+id/iconLocation"
                    android:id="@+id/locationLabel" />

                <TextView
                    android:text="Ruang Cinema Gedung 6 Universitas Amikom Yogyakarta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/locationLabel"
                    android:layout_toEndOf="@+id/iconLocation"
                    android:id="@+id/locationTextView" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:text="Join"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:gravity="bottom|center_horizontal"
        android:layout_alignParentBottom="true" />

</RelativeLayout>
